<Window x:Class="MozaikaApp.ProductionCalculatorPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Расчет продукции" Height="300" Width="500"
        Icon="Images/Icon.ico">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Тип продукции:" FontFamily="Comic Sans MS" Margin="0,10,0,0"/>
        <ComboBox x:Name="cmbProductType" Grid.Row="0" Margin="150,10,0,0" 
                  Width="200" DisplayMemberPath="name" SelectedValuePath="id"/>

        <TextBlock Text="Тип материала:" Grid.Row="1" FontFamily="Comic Sans MS" Margin="0,10,0,0"/>
        <ComboBox x:Name="cmbMaterialType" Grid.Row="1" Margin="150,10,0,0" 
                  Width="200" DisplayMemberPath="name" SelectedValuePath="id"/>

        <TextBlock Text="Кол-во сырья:" Grid.Row="2" FontFamily="Comic Sans MS" Margin="0,10,0,0"/>
        <TextBox x:Name="txtUsedRaw" Grid.Row="2" Margin="150,10,0,0" Width="200" Background="#FFABCFCE"/>

        <TextBlock Text="Параметр 1:" Grid.Row="3" FontFamily="Comic Sans MS" Margin="0,10,0,0"/>
        <TextBox x:Name="txtParam1" Grid.Row="3" Margin="150,10,0,0" Width="200" Background="#FFABCFCE"/>

        <TextBlock Text="Параметр 2:" Grid.Row="4" FontFamily="Comic Sans MS" Margin="0,10,0,0"/>
        <TextBox x:Name="txtParam2" Grid.Row="4" Margin="150,10,0,0" Width="200" Background="#FFABCFCE"/>

        <Button Grid.Row="5" Content="Рассчитать продукцию" 
                Click="CalcProduction_Click" 
                FontFamily="Comic Sans MS" Background="#FF546F94" Margin="140,39,140,10"/>
    </Grid>
</Window>
