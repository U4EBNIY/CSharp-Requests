<Window x:Class="MozaikaApp.OrderItemsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MozaikaApp"
        mc:Ignorable="d"
        Icon="Images/Icon.ico"
        Title="Продукция в заявке" Height="500" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock x:Name="txtTitle" Grid.Row="0" Text="Продукция в заявке" 
                   FontFamily="Comic Sans MS" FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="10" Foreground="#FF546F94"/>

        <!-- Список продукции -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10">
            <StackPanel x:Name="ItemsStackPanel"/>
        </ScrollViewer>

        <!-- Итоговая стоимость -->
        <Border Grid.Row="2" Background="#FFABCFCE" Margin="10" Padding="10" BorderThickness="1" BorderBrush="Black">
            <TextBlock x:Name="txtTotal" FontFamily="Comic Sans MS" FontSize="16" FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Кнопка закрытия -->
        <Button Grid.Row="2" Content="Закрыть" Click="Close_Click" 
                FontFamily="Comic Sans MS" FontSize="14" 
                Background="#FF546F94" Foreground="White"
                Width="100" Height="30" HorizontalAlignment="Right" Margin="10"/>
    </Grid>
</Window>