<Window x:Class="MozaikaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MozaikaApp"
        mc:Ignorable="d"
        Icon="Images/Icon.ico"
        Title="Заявки партнеров - Новые технологии" Height="550" Width="800">
    <Grid Margin="0,81,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="143*"/>
            <ColumnDefinition Width="257*"/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="listPartnerCanvas" Visibility="Hidden" Margin="0,19,0,0" Grid.ColumnSpan="2">
            <ListView x:Name="listPartner" Width="700" FontFamily="Comic Sans MS" HorizontalAlignment="Left" Height="370" Canvas.Left="50" Canvas.Top="10" VerticalAlignment="Top" Background="#FFABCFCE">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="1"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
        </Canvas>
        <Button Content="Показать заявки" FontFamily="Comic Sans MS" Click="showOrders_Click" HorizontalAlignment="Left" Margin="171,-46,0,0" VerticalAlignment="Top" FontSize="24" Width="275" Grid.ColumnSpan="2" Background="#FF546F94"/>
        <Button Content="Добавить заявку" FontFamily="Comic Sans MS" Click="addOrder_Click" HorizontalAlignment="Left" Margin="183,-46,0,0" VerticalAlignment="Top" FontSize="24" Width="275" Grid.Column="1" Background="#FF546F94"/>
        <Image Margin="50,-69,134,412" Source="/Images/Mozaika.png" Stretch="Fill"/>
    </Grid>
</Window>